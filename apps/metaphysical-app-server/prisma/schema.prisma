datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model SpellBook {
  createdAt    DateTime @default(now())
  description  String?
  id           String   @id @default(cuid())
  ingredients  String?
  instructions String?
  spellName    String?
  updatedAt    DateTime @updatedAt
}

model Ritual {
  createdAt   DateTime  @default(now())
  date        DateTime?
  description String?
  id          String    @id @default(cuid())
  ritualName  String?
  updatedAt   DateTime  @updatedAt
}

model Journal {
  content   String?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  title     String?
  updatedAt DateTime  @updatedAt
}

model Dashboard {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Contact {
  createdAt   DateTime @default(now())
  email       String?
  firstName   String?
  id          String   @id @default(cuid())
  lastName    String?
  phoneNumber String?
  updatedAt   DateTime @updatedAt
}

model Settings {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model TarotReading {
  cards      String?
  createdAt  DateTime  @default(now())
  date       DateTime?
  id         String    @id @default(cuid())
  question   String?
  result     String?
  spreadType String?
  updatedAt  DateTime  @updatedAt
}

model TarotSpread {
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  positions  String?
  spreadName String?
  updatedAt  DateTime @updatedAt
}

model User {
  createdAt     DateTime    @default(now())
  dashboards    Dashboard[]
  email         String?     @unique
  firstName     String?
  id            String      @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  settingsItems Settings[]
  updatedAt     DateTime    @updatedAt
  username      String      @unique
}
